<sxs>
    <scene root="root" axis_length="5" />

    <views default="mainCamera">
        <perspective id="mainCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="mainLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="rocksTexture" file="scenes/images/rocks.jpg" />
        <texture id="vidralTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="shinyRed" shininess="2">
            <emission r="0.5" g="0.0" b="0.0" a="1.0" />
            <ambient r="0" g="0.0" b="1.0" a="1.0" />
            <diffuse r="0.8" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="neutralBlue" shininess="2">
            <emission r="0.0" g="0.0" b="0.2" a="1.0" />
            <ambient r="0" g="0.0" b="1.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.8" a="1.0" />
            <specular r="0.0" g="0.0" b="0.5" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
        <transformation id="demoTranslate1">
            <rotate axis="y" angle="45" />
        </transformation>
        <transformation id="demoTranslate2">
            <translate x="0" y="0" z="3" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="cylinder">
            <cylinder base="0.1" top="0.1" height="1" slices="20" stacks="20" />
        </primitive>
        <primitive id="torus">
            <torus inner="1" outer="3" slices="20" loops="20" />
        </primitive>
        <primitive id="rectangle">
            <rectangle x1="-1" x2="1" y1="-1" y2="1" />
        </primitive>
    </primitives>

    <components>
        <component id="root">
            <transformation></transformation>
            <materials>
                <material id="shinyRed" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="walls" />
                <componentref id="table" />
                <componentref id="donut" />
            </children>
        </component>

        <component id="donut">
            <transformation>
                <rotate axis="x" angle="90" />
                <scale x="0.2" y="0.2" z="0.2" />
                <translate x="1" y="1" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="torus" />
            </children>
        </component>

        <component id="table">
            <transformation>
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="shinyRed" />
            </materials>
            <texture id="rocksTexture" />
            <children>
                <componentref id="cylinder1" />
                <componentref id="cylinder2" />
                <componentref id="cylinder3" />
                <componentref id="cylinder4" />
                <componentref id="tableTop" />
            </children>
        </component>

        <component id="cylinder1">
            <transformation>
                <translate x="0" y="-2" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>

        <component id="cylinder2">
            <transformation></transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>

        <component id="cylinder3">
            <transformation>
                <translate x="2" y="-2" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>

        <component id="cylinder4">
            <transformation>
                <translate x="2" y="0" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>

        <component id="walls">
            <transformation>
                <scale x="20" y="20" z="20" />
            </transformation>
            <materials>
                <material id="neutralBlue" />
            </materials>
            <texture id="vidralTexture" />
            <children>
                <componentref id="cube" />
            </children>
        </component>

        <component id="cube">
            <transformation></transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="rectangle1" />
                <componentref id="rectangle2" />
                <componentref id="rectangle3" />
                <componentref id="rectangle4" />
                <componentref id="rectangle5" />
                <componentref id="rectangle6" />
            </children>
        </component>

        <component id="rectangle1">
            <transformation>
                <translate x="0" y="0" z="-1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="vidralTexture" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="rectangle2">
            <transformation>
                <rotate axis="y" angle="180" />
                <translate x="0" y="0" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="vidralTexture" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="rectangle3">
            <transformation>
                <rotate axis="y" angle="90" />
                <translate x="-1" y="0" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="vidralTexture" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="rectangle4">
            <transformation>
                <rotate axis="y" angle="-90" />
                <translate x="1" y="0" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="vidralTexture" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="rectangle5">
            <transformation>
                <rotate axis="x" angle="90" />
                <translate x="0" y="1" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="vidralTexture" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="rectangle6">
            <transformation>
                <rotate axis="x" angle="-90" />
                <translate x="0" y="-1" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="vidralTexture" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <component id="tableTop">
            <transformation>
                <scale x="1" y="2" z="0.1" />
                <translate x="1" y="-1" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="cube" />
            </children>
        </component>


    </components>
</sxs>